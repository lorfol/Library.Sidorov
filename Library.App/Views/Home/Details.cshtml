@model Library.Domain.Core.Models.Book

@{
    ViewBag.Title = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    @{
        string authors = String.Join(", ", Model.Authors.Select(x => x.Name));
    }

    <h5>by @authors</h5>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Count)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublicationDate.Year)
        </dd>

    </dl>
</div>
<div class="row">
    <div class="text-center">
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })

        @if (HttpContext.Current.User.IsInRole("admin"))
        {
            @Html.ActionLink("Edit", "UpdateBook", "AdministratorAccount", new { bookId = Model.Id }, new { @class = "btn btn-warning" })
            <span>
                @Html.ActionLink("Delete", "DeleteBook", "AdministratorAccount", new { bookId = Model.Id }, new { @class = "btn btn-danger" })
            </span>
        }

        @if (!(HttpContext.Current.User.IsInRole("admin") || HttpContext.Current.User.IsInRole("librarian")))
        {
            if (Model.Count == 0)
            {
                <button class="btn btn-danger" disabled="disabled" title="Temporarily unavailable">Order</button>
            }
            else
            {
                @Html.ActionLink("Order", "CreateOrder", new { bookId = Model.Id }, new { @class = "btn btn-success" })
            }
        }
    </div>
</div>
