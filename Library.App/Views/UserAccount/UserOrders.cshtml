@{
    ViewBag.Title = "My Orders";
}

@using Library.App.ViewModels
@model IEnumerable<OrderViewModel>

<h3>My Orders</h3>
<br />

@if (Model.Count() == 0)
{
    <h4>You didn't have any orders yet</h4>
}
else
{
    <table class="table table-striped">

        <thead>
            <tr>
                <th>Book name</th>
                <th>Taken date</th>
                <th>Return date</th>
                <th>Status</th>
                <th>Late fine</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        @order.BookName
                    </td>
                    <td>
                        @order.TakenDate
                    </td>
                    <td>
                        @order.ReturnDate
                    </td>
                    <td id="@order.Id">
                        @order.Status
                    </td>
                    <td>
                        @order.LateFine$
                    </td>
                </tr>

            }
        </tbody>

    </table>
}

<script>
    $(function () {
        // Ссылка на автоматически-сгенерированный прокси хаба
        var chat = $.connection.userOrdersHub;
        // Объявление функции, которая хаб вызывает при получении сообщений
        chat.client.addMessage = function (order) {
            debugger;
            // Добавление сообщений на веб-страницу
            let ord = document.getElementById(order.Id);
            ord.innerText = order.Status;
        };


        // Открываем соединение
        $.connection.hub.start().done(function () {
            console.log("Connection!!!!!!!!!!!!!")
        });
    });
</script>
