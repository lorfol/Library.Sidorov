@{
    ViewBag.Title = "My Orders";
}

@using Library.App.ViewModels
@model IEnumerable<OrderViewModel>

<h3>My Orders</h3>
<br />
@if (Model.Count() == 0)
{
    <h4>You didn't have any orders yet</h4>
}
else
{
    <table class="table table-striped">

        <thead>
            <tr>
                <th>Book name</th>
                <th>Taken date</th>
                <th>Return date</th>
                <th>Late fine</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    @order.BookName
                </tr>
                <tr>
                    @order.TakenDate
                </tr>
                <tr>
                    @order.ReturnDate
                </tr>
                <tr>
                    @order.LateFine
                </tr>
            }
        </tbody>

    </table>
}

